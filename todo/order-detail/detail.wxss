/* pages/order/detail/detail.wxss */
.order_detail_container {
  padding-bottom: 140rpx;
  background: #f3f5f7;
}
.address_card .nav{
  padding: 30rpx;
}

.address_card .top_line {
  width: 100%;
  height: 6rpx;
  background-color: #fff;
  background-image: url(https://cdn-we-retail.ym.tencent.com/miniapp/order/stripe.png);
  background-repeat: repeat-x;
  display: block;
}

.title_text {
  margin-left: 20rpx;
}

.nav_address {
  justify-content: space-between;
}

.address_content .address_title {
  font-size: 40rpx;
  font-weight: bold;
  
}

.address_content .address_full {
  font-size: 30rpx;
  font-weight: 400;
  line-height: 70rpx;
  
}

.address_content .info {
  color: #666;
}

.form-textarea {
  border-radius: 24rpx;
  background-color: #f7f8fa;
  padding: 16px 12px;
  font-size: 26rpx;
  margin-top: 24rpx;
  width: 94%;
  height: 160rpx;
}


/* 购物车列表 */
.goods_wrapper {
  background-color: white;
  padding: 24rpx 32rpx;
  margin-bottom: 40rpx;
}

.goods_list {
  padding: 12rpx 0;
}

.goods_list .goods_item {
  display: flex;
  margin-bottom: 12rpx;
}

.goods_item .img {
  width: 128rpx;
  height: 138rpx;
}

.goods_item .img image {
  width: 100%;
  height: 100%;
}
.content {
  flex: 1;
  padding: 0 20rpx;
}
.content .goods_title {
  font-size: 14px;
  color: #333;
  margin: 20rpx 0;
}

.goods_price {
  font-size: 18px;
  font-weight: bold;
}


.num {
  display: flex;
  height: 138rpx;
  align-items: flex-end;
}


/* 支付方式 */
.time-wraper .title {
  flex: 1;
  align-items: center;
  margin-bottom: 0;
}
.time-wraper image {
  margin-right: 4px;
  height: 22px;
  width: 22px;
}


/* 底部结算 */

.footer {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  background-color: #fff;
  height: 112rpx;
  padding-bottom: env(safe-area-inset-bottom);
  justify-content: space-between;
  align-items: center;
}

.left {
  color: #fa4126;
  font-weight: bold;
  font-size: 52rpx;
  line-height: 88rpx;
  margin-left: 16px;
}

.right {
  height: 80rpx;
  width: 240rpx;
  border-radius: 40rpx;
  background-color: #fa4126;
  color: #ffffff;
  line-height: 80rpx;
  font-weight: bold;
  font-size: 28rpx;
  text-align: center;
  margin-right: 16px;
}
